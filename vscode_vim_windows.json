{
  "editor.fontFamily": "IosevkaTerm Nerd Font",
  "editor.fontSize": 20,
  "window.title": "${activeEditorShort}",
  "editor.renderWhitespace": "none", // removes whitespace chars
  "editor.renderLineHighlight": "none", // removes line highlight
  "editor.overviewRulerBorder": false, // removes border from overview ruler (located on the right, same position as the scrollbar)
  "editor.hideCursorInOverviewRuler": true, // hides cursor mark in the overview ruler
  "editor.folding": false, // removes the folding feature
  "editor.occurrencesHighlight": false, // removes highlights occurrences (still works when you select a word)
  //"editor.matchBrackets": false, // removes the highlight of matching brackets (I use Subtle Match Brackets extension for this)
  "editor.glyphMargin": false, // removes the space used mainly for debugging indicators
  //"workbench.colorTheme": "Gruvbox Dark Soft",
  "workbench.editor.showIcons": false, // removes icon from opened files in tabs
  "workbench.editor.tabCloseButton": "off", // removes the status bar
  "editor.minimap.autohide": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "debug.console.closeOnEnd": true,
  "explorer.confirmDelete": false,
  "editor.minimap.side": "left",
  "explorer.confirmDragAndDrop": false,
  "update.mode": "manual",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "：": true,
    "с": true
  },
  "editor.unicodeHighlight.includeStrings": false,
  "git.enableSmartCommit": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.localEchoLatencyThreshold": -1,
  "editor.inlayHints.padding": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "files.associations": {
    "*.txt": "cpp",
    "ostream": "cpp"
  },
  "breadcrumbs.enabled": false,
  "editor.renderControlCharacters": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  // minimal setup
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "workbench.tree.renderIndentGuides": "none",
  "explorer.openEditors.visible": 1,
  "explorer.decorations.colors": false,
  // Smooth Cursors
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.indentation": false,
  // Active Line Highlights
  // left side
  "editor.lineNumbers": "on",
  "editor.showFoldingControls": "never",
  // something
  "scm.diffDecorations": "gutter",
  "scm.diffDecorationsGutterVisibility": "hover",
  "scm.diffDecorationsGutterWidth": 1,
  "problems.defaultViewMode": "table",
  "codeium.enableCodeLens": false,
  "terminal.integrated.fontFamily": "IosevkaTerm Nerd Font",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    },
    "Debian (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": [
        "-d",
        "Debian"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Debian (WSL)",
  "terminal.integrated.enableImages": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontWeightBold": "normal",
  "window.titleBarStyle": "custom",
  "terminal.integrated.cursorStyle": "line",
  "javascript.format.semicolons": "insert",
  "typescript.format.semicolons": "remove",
  "files.autoSave": "afterDelay",
  "editor.rulers": [
    {
      "column": 60,
      "color": "#3c3836"
    }
  ],
  "terminal.integrated.fontSize": 12,
  "workbench.colorTheme": "Vim Dark Medium",
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "codeium.enableConfig": {
    "*": true
  },
  "vim.leader": "<space>",
  "vim.smartRelativeLine": true,
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-a>": false,
    "<C-c>": true,
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vim.overrideCopy": false,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": false,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "pink",
  "vim.easymotionKeys": "hklyuiopnm,qwertzxcvbasdgjf:",
  "vim.easymotionMarkerForegroundColorOneChar": "black",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "s"
      ],
      "after": [
        "leader",
        "leader",
        "s"
      ]
    },
    {
      "before": [
        "<esc>"
      ],
      "commands": [
        ":nohl",
      ]
    },
    // {
    //   "before": [
    //     "<C-a>"
    //   ],
    //   "after": [
    //     "g",
    //     "g",
    //     "v",
    //     "G",
    //   ]
    // },
    {
      "before": [
        "<C-c>"
      ],
      "commands": [
        ":y",
      ]
    },
  ],
  "git.ignoreMissingGitWarning": true,
  "vim.highlightedyank.enable": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.sneakReplacesF": true,
  "vim.autoSwitchInputMethod.enable": true,
}

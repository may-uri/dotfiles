{
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 22,
  "window.title": "${activeEditorShort}", // removes whitespace chars
  "editor.renderLineHighlight": "none", // removes line highlight
  "editor.overviewRulerBorder": false, // removes border from overview ruler (located on the right, same position as the scrollbar)
  "editor.hideCursorInOverviewRuler": true, // removes the folding feature
  "editor.occurrencesHighlight": false, // removes highlights occurrences (still works when you select a word)
  //"editor.matchBrackets": false, // removes the highlight of matching brackets (I use Subtle Match Brackets extension for this)
  "editor.glyphMargin": false, // removes the space used mainly for debugging indicators
  //"workbench.colorTheme": "Gruvbox Dark Soft",
  "workbench.editor.showIcons": true, // removes icon from opened files in tabs
  "workbench.editor.tabCloseButton": "off", // removes the status bar
  "editor.minimap.autohide": true,
  "editor.bracketPairColorization.enabled": true,
  "debug.console.closeOnEnd": true,
  "editor.minimap.side": "left",
  "update.mode": "manual",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "：": true,
    "с": true
  },
  "editor.unicodeHighlight.includeStrings": false,
  "git.enableSmartCommit": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.localEchoLatencyThreshold": 0,
  "editor.inlayHints.padding": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "files.associations": {
    "*.txt": "cpp",
    "ostream": "cpp"
  },
  "breadcrumbs.enabled": false,
  "editor.renderControlCharacters": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.minimap.enabled": false,
  // minimal setup
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "workbench.tree.renderIndentGuides": "none",
  "explorer.openEditors.visible": 2,
  "explorer.decorations.colors": false,
  // Smooth Cursors
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.indentation": false,
  // something
  "scm.diffDecorations": "gutter",
  "scm.diffDecorationsGutterVisibility": "hover",
  "scm.diffDecorationsGutterWidth": 2,
  "problems.defaultViewMode": "table",
  "codeium.enableCodeLens": false,
  "terminal.integrated.fontFamily": "IosevkaTerm Nerd Font",
  "terminal.integrated.enableImages": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontWeightBold": "normal",
  "window.titleBarStyle": "native",
  "javascript.format.semicolons": "insert",
  "typescript.format.semicolons": "remove",
  "terminal.integrated.fontSize": 20,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "codeium.enableConfig": {
    "*": true
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "git.ignoreMissingGitWarning": true,
  "window.commandCenter": false,
  "apc.electron": {
    "titleBarStyle": "hidden",
    "frame": false,
  },
  "apc.parts.font.family": {
    "extension-editor": "Helvetica", // Required: Expected font installation on machine and Application restart
    "tabs": "iosevkaterm nerd font",
  },
  "workbench.editor.enablePreview": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyleInactive": "block",
  "apc.header": {
    "height": 30,
    "fontSize": 14
  },
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.highlightModifiedTabs": true,
  "vscode-neovim.highlightGroups.highlights": {
    "IncSearch": {
      "backgroundColor": "theme.editor.findMatchBackground",
      // "borderColor": "theme.editor.findMatchBorder"
      "borderColor": "theme.editor.findMatchBackground"
    },
    "Search": {
      "backgroundColor": "theme.editor.findMatchHighlightBackground",
      // "borderColor": "theme.editor.findMatchHighlightBorder"
      "borderColor": "theme.editor.findMatchBorder"
    },
    "Visual": {
      "backgroundColor": "theme.editor.selectionBackground"
    }
  },
  "vscode-neovim.mouseSelectionDebounceTime": 200,
  "vscode-neovim.statusLineSeparator": "   ",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Debian (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "Debian"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Debian (WSL)",
  "audioCues.notebookCellCompleted": "off",
  "audioCues.taskCompleted": "off",
  "editor.tabCompletion": "on",
  "git.openRepositoryInParentFolders": "never",
  "workbench.startupEditor": "none",
  "workbench.panel.defaultLocation": "right",
  "files.trimTrailingWhitespace": true,
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "editor.defaultFoldingRangeProvider": "ecmel.vscode-html-css",
  "editor.cursorStyle": "block",
  "editor.renderWhitespace": "none",
  "editor.tabSize": 2,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "extensions.ignoreRecommendations": true,
  "editor.lightbulb.enabled": false,
  "editor.fontLigatures": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "animations.Install-Method": "Apc Customize UI++",
  "apc.imports": [
    "file:///c:/Users/mi/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.1/dist/updateHandler.js"
  ],
  "workbench.activityBar.visible": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "apc.font.family": "JetBrainsMono Nerd Font",
}

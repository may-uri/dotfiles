function fish_greeting
    if test -e $HOME/todo.md
        set -l todo_items (cat $HOME/todo.md)
        set -l count 0
        echo -e "\e[32mTODO:\e[0m"

        for todo_item in $todo_items
            # set -l count (math $count + 1)
            # echo "$count) $todo_item"
            echo "$todo_item"
        end
    else
        echo "No todo list found. Add todo.md in your home directory to start"
    end
end



function start_bot
    cd /mnt/d/git/chatgpt-telegram-bot
    # Create a virtual environment
    python3 -m venv venv

    # Activate the virtual environment
    source venv/bin/activate.fish

    # Run the main.py script
    python3 bot/main.py
end
alias tg=start_bot
